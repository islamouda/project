<div>
  <%= link_to 'Edit', edit_author_post_path(@post), class:'btn btn-sm btn-warning' %>
  <%= link_to 'Remove', author_post_path(@post), method: :delete, data:{ confirm: 'Are you sure?'} , class:'btn btn-sm btn-danger'%>

</div> 
<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
    <h1><%= @post.title %></h1>
    <div class="card-img-top img-fluid" style='background-image: url(<%= @post.banner_image_url %>); '></div>
    <p><%= @post.display_day_published%></p>
    <%= @post.body %>
  </div>
</div>

